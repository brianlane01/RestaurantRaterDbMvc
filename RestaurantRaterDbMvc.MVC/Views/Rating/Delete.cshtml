@model RestaurantRaterDbMvc.Models.RatingModels.RatingDetail

@{
    string title = "Delete " + Model.Id;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<h4>Are you sure you want to delete @Model.Id?</h4>
<hr />

<dl class = "row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.RestaurantId)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.RestaurantId)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.FoodScore)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.FoodScore)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.AtmospherScore)
    </dt>
    <dd class = "col-sm-10">
        @if(Model.AtmospherScore >0)
        {
            @Html.DisplayFor(model => model.AtmospherScore)
        }
        else
        {
            <span>No Ratings Yet</span>
        }
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.CleanlinessScore)
    </dt>
    <dd class = "col-sm-10">
        @if(Model.CleanlinessScore >0)
        {
            @Html.DisplayFor(model => model.CleanlinessScore)
        }
        else
        {
            <span>No Ratings Yet</span>
        }
    </dd>
</dl>

<form asp-action = "Delete">
    <input type = "submit" value = "Delete" class = "btn btn-danger" /> |
    <a asp-action = "Index">Back to List</a>
</form>
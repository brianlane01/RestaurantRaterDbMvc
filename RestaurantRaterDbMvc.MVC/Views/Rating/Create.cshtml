@model RestaurantRaterDbMvc.Models.RatingModels.RatingCreate

@{
    string title = "Rate a Restaurant";
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary = "ModelOnly" class = "text-danger"></div>
            <div class="form-group">
                @* <label asp-for="RestaurantId" class="control-label"></label>
                <input asp-for="RestaurantId" class="form-control" /> *@
                <label asp-for="RestaurantId" class="control-label"></label>
                <select asp-for="RestaurantId" asp-items="Model.RestaurantOptions" class="form-control"></select>
                @* @Html.DisplayNameFor(r => r.RestaurantId)
                @Html.DropDownListFor(r => r.RestaurantId, Model.RestaurantOptions) *@
                <span asp-validation-for= "RestaurantId" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodScore" class="control-label"></label>
                <input asp-for="FoodScore" class="form-control" />
                <span asp-validation-for="FoodScore" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AtmospherScore" class="control-label"></label>
                <input asp-for="AtmospherScore" class="form-control" />
                <span asp-validation-for="AtmospherScore" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CleanlinessScore" class="control-label"></label>
                <input asp-for="CleanlinessScore" class="form-control" />
                <span asp-validation-for="CleanlinessScore" class = "text-danger"></span>
            </div>
            <hr />
            <div class = "form-group">
                <input type = "submit" value = "Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action = "Index">Back To List</a>
        </div>
    </div>
</div>